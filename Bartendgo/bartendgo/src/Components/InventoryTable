import React from 'react';

const InventoryTable = ({ inventory }) => {
  const lowStockThreshold = 5; // Stock threshold for "low stock" warning

  return (
    <table id="inventory-table">
      <thead>
        <tr>
          <th>Item ID</th>
          <th>Type of Liquor</th>
          <th>Brand</th>
          <th>Price</th>
          <th>Amount on Hand</th>
          <th>Stock Warning</th>
          <th>Reorder Level</th>
          <th>Action/Delete</th>
        </tr>
      </thead>
      <tbody>
        {inventory.map((product) => (
          <InventoryItem key={product.id} product={product} lowStockThreshold={lowStockThreshold} />
        ))}
      </tbody>
    </table>
  );
};

export default InventoryTable;
