import React from 'react';

function LiquorItem({ liquor, removeLiquor }) {
  return (
    <li>
      <p>Name: {liquor.name}</p>
      <p>Type: {liquor.type}</p>
      <p>Quantity: {liquor.quantity}</p>
      <p>Price: ${liquor.price}</p>
      <button onClick={() => removeLiquor(liquor.id)}>Remove</button>
    </li>
  );
}

export default LiquorItem;
